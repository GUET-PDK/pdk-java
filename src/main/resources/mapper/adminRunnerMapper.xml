<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.AdminRunnerMapper">
    <resultMap id="applyMessage" type="com.example.demo.dto.ApplyMessage">
        <id property="id" column="id"/>
        <result property="userId" column="userId"/>
        <result property="idNumber" column="idNumber"/>
        <result property="cardNumber" column="cardNumber"/>
        <result property="idImage" column="idImage"/>
        <result property="cardImage" column="cardImage"/>
        <result property="applyTime" column="apply_time"/>
    </resultMap>

    <select id="countRunner" resultType="Integer">
        select
            count(*)
        from
            middle_user_role
        where
            role_id = 3;
    </select>

    <select id="countDayToDay" resultType="Integer" >
        select
            count(distinct a.user_id)
        from
            back_user_login a
                left join
            middle_user_role b
            on
                a.user_id = b.user_id
        where
            b.role_id = 3
          and
            a.login_time between #{start} and #{end}
    </select>

    <select id="countApplicationByStatus" resultType="Integer>">
        select
            count()
        from
            sys_apply_runner
        where
            status = #{status}
    </select>

    <select id="selectApplyByUserId" resultMap="applyMessage">
        select
            id, userId, idNumber, cardNumber, idImage, cardImage, apply_time
        from
            sys_apply_runner
        where
            status = #{status}
    </select>

    <update id="updateApplyStatus">
        update
            sys_apply_runner
        set
            status = #{status}
        where
            id = #{id}
    </update>

    <select id="selectUserIdById" resultType="String">
        select
            userId
        from
            sys_apply_runner
        where
            id = #{id}
    </select>

    <update id="updateRoleIdByUserId">
        update
            middle_user_role
        set
            role_id = 3
        where
            user_id = #{userId}
    </update>

</mapper>